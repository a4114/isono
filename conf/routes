# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# メニューページ
GET     /                                controllers.Application.index()

# 視聴ページ
GET     /watch/:channelURI               controllers.Application.watch(channelURI:String)

# コメント投稿
POST    /watch/:channelURI/update        controllers.Application.postComment(channelURI:String)

#コメット作成
GET    /watch/:channelURI/connectComet   controllers.Application.connectComet(channelURI:String)

# 枠作成ページ
GET     /newChannel                      controllers.Application.newChannel()

# 枠作成
POST    /newChannel/update               controllers.Application.updateChannel()

# 配信ページ
GET     /broadcast/:channelURI           controllers.Application.broadcast(channelURI:String)

# 投稿者コメント
POST    /broadcast/:channelURI/update    controllers.Application.updateOwnerComment(channelURI:String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               　　　controllers.Assets.at(path="/public", file)